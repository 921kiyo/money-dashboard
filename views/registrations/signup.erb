<div class="row">
  <div class="col-md-6">
    <form role="form" action="/registrations" method="post">
      <div class="form-group">
        <h3 class="form_name"><u>Sign up</u></h3><br>
        <label for="name" class="form_name">
          Name
        </label>
        <input type="text" class="form-control" id="exampleInputText" name="name">
      </div>
      <div class="form-group">

        <label for="exampleInputEmail1 email" class="form_name">
          Email
        </label>
        <input type="email" class="form-control" id="exampleInputEmail1" name="email">
      </div>
      <div class="form-group">            
        <label for="exampleInputPassword1 password" class="form_name">
          Password
        </label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="password">
